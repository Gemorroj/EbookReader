{
    "name": "gemorroj/ebook-reader",
    "description": "E-books reader",
    "keywords": ["ebook","mobi","epub","fb2"],
    "type": "library",
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Gemorroj"
        }
    ],
    "require": {
        "php": ">=8.2",
        "ext-zip": "*",
        "ext-dom": "*",
        "ext-xmlreader": "*",
        "ext-libxml": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5.15",
        "friendsofphp/php-cs-fixer": "^3.75",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "EbookReader\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EbookReader\\Tests\\": "tests/"
        }
    }
}
