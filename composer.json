{
    "name": "gemorroj/ebook-reader",
    "description": "E-books reader",
    "keywords": ["ebook","mobi","epub","fb2","txt"],
    "type": "library",
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Gemorroj"
        }
    ],
    "require": {
        "php": ">=8.4",
        "ext-zip": "*",
        "ext-dom": "*",
        "ext-xmlreader": "*",
        "ext-libxml": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.3",
        "friendsofphp/php-cs-fixer": "^3.87",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "EbookReader\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EbookReader\\Tests\\": "tests/"
        }
    }
}
